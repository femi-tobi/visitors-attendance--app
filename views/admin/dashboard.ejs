<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard | Visitor Management</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="bg-gray-50 min-h-screen" style="font-family: 'Inter', sans-serif;">
  <!-- Navigation -->
  <nav class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <h1 class="text-xl font-semibold text-gray-900">Visitor Management Admin</h1>
        </div>
        <div class="flex items-center space-x-4">
          <a href="/admin/staff" class="text-gray-600 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">Staff Management</a>
          <a href="/admin/logout" class="text-red-600 hover:text-red-800 px-3 py-2 rounded-md text-sm font-medium">Logout</a>
        </div>
      </div>
    </div>
  </nav>

  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-8 gap-6 mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Visits</dt>
                <dd class="text-lg font-medium text-gray-900"><%= stats && stats.total_visits ? stats.total_visits : 0 %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Approved</dt>
                <dd class="text-lg font-medium text-gray-900"><%= stats && stats.approved_visits ? stats.approved_visits : 0 %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-red-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Denied</dt>
                <dd class="text-lg font-medium text-gray-900"><%= stats && stats.denied_visits ? stats.denied_visits : 0 %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-yellow-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Pending</dt>
                <dd class="text-lg font-medium text-gray-900"><%= stats && stats.pending_visits ? stats.pending_visits : 0 %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-purple-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Today</dt>
                <dd class="text-lg font-medium text-gray-900"><%= todayVisits || 0 %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Visitor Type Statistics -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-400 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Visitors</dt>
                <dd class="text-lg font-medium text-gray-900" id="visitorCount">-</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-orange-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Contractors</dt>
                <dd class="text-lg font-medium text-gray-900" id="contractorCount">-</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-600 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Suppliers</dt>
                <dd class="text-lg font-medium text-gray-900" id="supplierCount">-</dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Visits Table -->
    <div class="bg-white shadow overflow-hidden sm:rounded-md">
      <div class="px-4 py-5 sm:px-6 flex flex-col md:flex-row md:justify-between md:items-center gap-4">
        <div>
          <h3 class="text-lg leading-6 font-medium text-gray-900">Recent Visit Requests</h3>
          <p class="mt-1 max-w-2xl text-sm text-gray-500">Latest visitor requests and their status</p>
        </div>
        <div class="flex flex-col md:flex-row gap-2 items-center">
          <select id="visitorTypeFilter" class="border rounded px-2 py-1">
            <option value="">All Types</option>
            <option value="visitor">Visitors</option>
            <option value="contractor">Contractors</option>
            <option value="supplier">Suppliers</option>
          </select>
          <input type="date" id="startDate" class="border rounded px-2 py-1" />
          <span class="mx-1">to</span>
          <input type="date" id="endDate" class="border rounded px-2 py-1" />
          <button id="filterDateBtn" class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded-md shadow focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">Filter</button>
          <button id="clearFilterBtn" class="bg-gray-400 hover:bg-gray-500 text-white px-3 py-1 rounded-md shadow focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2">Clear</button>
          <button id="exportExcelBtn" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md shadow focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2">Export to Excel</button>
        </div>
      </div>
      <div class="overflow-x-auto">
        <table id="visitsTable" class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Full Name</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Phone</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Company Name</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Visitor Type</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Staff</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reason</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if (visits && visits.length > 0) { %>
              <% visits.forEach(function(visit) { %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap"><%= visit.visitor_name || 'Unknown' %></td>
                  <td class="px-6 py-4 whitespace-nowrap"><%= visit.visitor_email || 'No email' %></td>
                  <td class="px-6 py-4 whitespace-nowrap"><%= visit.visitor_phone || 'No phone' %></td>
                  <td class="px-6 py-4 whitespace-nowrap"><%= visit.company_name || '' %></td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if (visit.visitor_type === 'visitor') { %>
                      Visitor
                    <% } else if (visit.visitor_type === 'contractor') { %>
                      Contractor
                    <% } else if (visit.visitor_type === 'supplier') { %>
                      Supplier
                    <% } %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= visit.staff_email || 'No staff' %></td>
                  <td class="px-6 py-4 text-sm text-gray-900 max-w-xs truncate"><%= visit.reason || 'No reason' %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <% if (visit.status === 'allowed') { %>
                      <% if (!visit.tag_number) { %>
                        <form class="tag-number-form flex items-center" data-visit-id="<%= visit.visit_id %>" onsubmit="return false;">
                          <input type="text" name="tag_number" placeholder="Enter tag number" class="border rounded px-2 py-1 mr-2" required />
                          <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-2 py-1 rounded">Set Tag</button>
                        </form>
                        <span class="tag-number-success text-green-600 text-xs hidden ml-2">Saved!</span>
                        <span class="tag-number-error text-red-600 text-xs hidden ml-2"></span>
                      <% } else { %>
                        <span class="inline-block bg-green-100 text-green-800 px-2 py-1 rounded text-xs font-semibold">Tag #: <%= visit.tag_number %></span>
                      <% } %>
                    <% } else { %>
                      <span class="text-gray-400">-</span>
                    <% } %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= visit.created_at ? new Date(visit.created_at).toLocaleDateString() : 'Unknown' %>
                    <br>
                    <span class="text-xs text-gray-400"><%= visit.created_at ? new Date(visit.created_at).toLocaleTimeString() : '' %></span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <% if (!visit.check_out_time) { %>
                      <form action="/visitor/checkout/<%= visit.visit_id %>" method="POST" style="display:inline;">
                        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded">Sign Out</button>
                      </form>
                    <% } else { %>
                      <span class="text-green-700 flex items-center gap-1">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline-block" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                        Signed out at <%= new Date(visit.check_out_time).toLocaleString('en-GB', { day: '2-digit', month: 'short', year: 'numeric', hour: '2-digit', minute: '2-digit', hour12: true }) %>
                      </span>
                    <% } %>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="10" class="px-6 py-4 text-center text-gray-500">No visits found</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/xlsx@0.18.5/dist/xlsx.full.min.js"></script>
<script>
  // Populate visitor type statistics
  function updateVisitorTypeStats() {
    const rows = document.querySelectorAll('#visitsTable tbody tr');
    let visitorCount = 0;
    let contractorCount = 0;
    let supplierCount = 0;
    
    rows.forEach(function(row) {
      if (row.style.display !== 'none') {
        const visitorTypeSpan = row.querySelector('td:nth-child(2) span');
        if (visitorTypeSpan) {
          const visitorTypeText = visitorTypeSpan.textContent.trim();
          console.log('Found visitor type:', visitorTypeText); // Debug log
          if (visitorTypeText === 'Visitor') visitorCount++;
          else if (visitorTypeText === 'Contractor') contractorCount++;
          else if (visitorTypeText === 'Supplier') supplierCount++;
        }
      }
    });
    
    document.getElementById('visitorCount').textContent = visitorCount;
    document.getElementById('contractorCount').textContent = contractorCount;
    document.getElementById('supplierCount').textContent = supplierCount;
    
    console.log('Updated stats - Visitors:', visitorCount, 'Contractors:', contractorCount, 'Suppliers:', supplierCount); // Debug log
  }

  // Initialize statistics
  updateVisitorTypeStats();

  document.getElementById('exportExcelBtn').addEventListener('click', function () {
    var table = document.getElementById('visitsTable');
    var wb = XLSX.utils.table_to_book(table, {sheet: "Visits"});
    XLSX.writeFile(wb, 'visits.xlsx');
  });

  // Enhanced filter function
  function applyFilters() {
    var start = document.getElementById('startDate').value;
    var end = document.getElementById('endDate').value;
    var visitorType = document.getElementById('visitorTypeFilter').value;
    var rows = document.querySelectorAll('#visitsTable tbody tr');
    
    console.log('Applying filters - Date range:', start, 'to', end, 'Visitor type:', visitorType); // Debug log
    
    rows.forEach(function(row) {
      var dateCell = row.querySelector('td:nth-child(6)'); // Date column (6th column)
      var visitorTypeCell = row.querySelector('td:nth-child(2) span'); // Details column (2nd column)
      if (!dateCell) return;
      
      var dateText = dateCell.childNodes[0].textContent.trim();
      var show = true;
      
      // Date filtering
      if (dateText && dateText !== 'Unknown') {
        var rowDate = new Date(dateText);
        if (start) {
          var startDate = new Date(start);
          if (rowDate < startDate) show = false;
        }
        if (end) {
          var endDate = new Date(end);
          endDate.setDate(endDate.getDate() + 1);
          if (rowDate >= endDate) show = false;
        }
      }
      
      // Visitor type filtering
      if (visitorType && visitorTypeCell) {
        var rowVisitorType = visitorTypeCell.textContent.trim();
        console.log('Comparing visitor type:', rowVisitorType, 'with filter:', visitorType); // Debug log
        if (rowVisitorType.trim().toLowerCase() !== visitorType.trim().toLowerCase()) show = false;
      }
      
      row.style.display = show ? '' : 'none';
    });
    
    updateVisitorTypeStats();
  }

  // Event listeners for filtering
  document.getElementById('filterDateBtn').addEventListener('click', applyFilters);
  document.getElementById('visitorTypeFilter').addEventListener('change', applyFilters);
  
  document.getElementById('clearFilterBtn').addEventListener('click', function () {
    document.getElementById('startDate').value = '';
    document.getElementById('endDate').value = '';
    document.getElementById('visitorTypeFilter').value = '';
    var rows = document.querySelectorAll('#visitsTable tbody tr');
    rows.forEach(function(row) {
      row.style.display = '';
    });
    updateVisitorTypeStats();
  });

  // Tag number AJAX submission
  document.querySelectorAll('.tag-number-form').forEach(function(form) {
    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      const visitId = form.getAttribute('data-visit-id');
      const input = form.querySelector('input[name="tag_number"]');
      const tagNumber = input.value.trim();
      const successMsg = form.nextElementSibling;
      const errorMsg = successMsg.nextElementSibling;
      successMsg.classList.add('hidden');
      errorMsg.classList.add('hidden');
      if (!tagNumber) return;
      try {
        const res = await fetch(`/admin/visit/${visitId}/tag`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ tag_number: tagNumber })
        });
        const data = await res.json();
        if (data.success) {
          input.disabled = true;
          form.querySelector('button[type="submit"]').disabled = true;
          successMsg.classList.remove('hidden');
          form.style.display = 'none';
          // Optionally, show the tag number in place
          const tagSpan = document.createElement('span');
          tagSpan.className = 'inline-block bg-green-100 text-green-800 px-2 py-1 rounded text-xs font-semibold';
          tagSpan.textContent = `Tag #: ${tagNumber}`;
          form.parentNode.insertBefore(tagSpan, form.nextSibling);
        } else {
          errorMsg.textContent = data.message || 'Failed to save tag number.';
          errorMsg.classList.remove('hidden');
        }
      } catch (err) {
        errorMsg.textContent = 'Network error.';
        errorMsg.classList.remove('hidden');
      }
    });
  });
</script>
</html> 